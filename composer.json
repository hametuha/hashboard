{
	"name": "hametuha/hashboard",
	"description": "Web service like dashboard for WordPress.",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Hametuha INC",
			"email": "info@hametuha.co.jp"
		}
	],
	"scripts": {
		"test": "phpunit",
		"lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
		"fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
		"copy-wp-colors": [
			"mkdir -p src/scss/wp-admin-colors",
			"cp wordpress/wp-admin/css/colors/_admin.scss src/scss/wp-admin-colors/_admin.scss",
			"cp wordpress/wp-admin/css/colors/_mixins.scss src/scss/wp-admin-colors/_mixins.scss",
			"cp wordpress/wp-admin/css/colors/_variables.scss src/scss/wp-admin-colors/_variables.scss",
			"echo 'WordPress color SCSS files copied to src/scss/wp-admin-colors/'"
		],
		"post-install-cmd": [
			"@copy-wp-colors"
		],
		"post-update-cmd": [
			"@copy-wp-colors"
		]
	},
	"minimum-stability": "stable",
	"require": {
		"php": ">=7.4",
		"hametuha/pattern": "^1.0",
		"ramsey/uuid": "^3.7"
	},
	"require-dev": {
		"phpunit/phpunit": "^6|^7|^8|^9",
		"wp-coding-standards/wpcs": "^3.0.0",
		"yoast/phpunit-polyfills": "^3.0.0",
		"johnpbloch/wordpress": "^6.8.2"
	},
	"autoload": {
		"psr-0": {
			"Hametuha\\Hashboard": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Hametuha\\Hashboard\\Tests\\": "tests/app/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		}
	},
	"extra": {
		"wordpress-install-dir": "wordpress"
	}
}
