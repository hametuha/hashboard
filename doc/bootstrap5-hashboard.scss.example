$hb-img-path: '../img' !default;

// Bootstrap 5では@importの代わりに@useや@forwardを使用することが推奨されていますが、
// 既存のコードとの互換性のために@importを使用する例も示します

// 方法1: 従来の@importを使用する場合
@import "hb_bootstrap_override";
@import "../../node_modules/bootstrap/scss/bootstrap";
@import "hb_globals";
@import "_hb-components";

// 方法2: 新しい@use/@forwardを使用する場合（推奨）
/*
@use "hb_bootstrap_override" as *;
@use "../../node_modules/bootstrap/scss/bootstrap" as bootstrap;
@use "hb_globals" as *;
@use "hb-components" as *;
*/

// 注意: @useを使用する場合、変数やミックスインの名前空間が変わります
// 例: bootstrap.$grid-breakpointsのように参照する必要があります
// asキーワードを使用して名前空間を指定したり、as *で名前空間なしでインポートすることもできます
